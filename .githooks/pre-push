#!/usr/bin/env sh

current_tag=$(git describe --tags --abbrev=0 2>/dev/null)
remote_tag=$(git ls-remote --tags origin | awk -F/ '{print $3}' | sort -V | tail -n1)

if [ "$current_tag" != "$remote_tag" ]; then
  echo "############################################################ "
  echo "    üöÄ  –¢–µ–≥ –∏–∑–º–µ–Ω–∏–ª—Å—è $remote_tag -> $current_tag"
  echo "       –ù–∞ github.com –∑–∞–ø—É—Å—Ç–∏–ª—Å—è workflow –æ–±–Ω–æ–≤–ª—è—é—â–∏–π"
  echo "       –ø—Ä–æ–µ–∫—Ç vsuh/cron-tg-docker."
  echo "       —á–µ—Ä–µ–∑ –Ω–µ—Å–∫–æ–ª—å–∫–æ –º–∏–Ω—É—Ç –ø—Ä–∏–¥–µ—Ç —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –≤ telegram"
  echo "############################################################ "
else
  echo "‚úÖ –¢–µ–≥–∏ —Å–æ–≤–ø–∞–¥–∞—é—Ç ($current_tag)"
fi
