#!/bin/bash

if [ $# -eq 0 ]; then
    exit 0
fi

tag_changed=false

for ref in "$@"; do
    if [[ "$ref" == refs/tags/* ]]; then
        tag_changed=true
        # –ò–∑–≤–ª–µ–∫–∞–µ–º –∏–º—è —Ç–µ–≥–∞ (—É–±–∏—Ä–∞–µ–º –ø—Ä–µ—Ñ–∏–∫—Å refs/tags/)
        tag_name="${ref#refs/tags/}"
        echo "########################################## \
\
 üè∑Ô∏è  –ò–∑–º–µ–Ω–µ–Ω–∏–µ –≤–µ—Ä—Å–∏–∏ –Ω–∞: $tag_name.\
 –ó–∞–ø—É—Å–∫–∞–µ—Ç—Å—è workflow –∏ –æ–±–Ω–æ–≤–ª—è–µ—Ç—Å—è –æ–±—Ä–∞–∑ –≤ vsuh/cron-tg-docker \
\
 ########################################################"
    fi
done

# –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ, –µ—Å–ª–∏ —Ç–µ–≥–∏ –Ω–µ –º–µ–Ω—è–ª–∏—Å—å
if ! $tag_changed; then
    echo "‚úÖ No tags were changed in this push."
fi

exit 0
